class SwapNodesPairwise{
static class Node{
int val;
Node next;
Node(int val){
this.val = val;
}
}
public static void display(Node head){
Node temp = head;
while(temp!=null){
System.out.print(temp.val+" ");
temp = temp.next;
}
System.out.println();
}
public static void swapPairs(Node head){
Node temp = head;
if(temp!=null && temp.next!=null) {
int temp1 = temp.val;
temp.val = temp.next.val;
temp.next.val = temp1;
swapPairs(temp.next.next);
}
}
public static void main(String args[]){
Node a = new Node(10);
Node b = new Node(20);
Node c = new Node(30);
Node d = new Node(40);
Node e = new Node(50);
a.next = b;
b.next = c;
c.next = d;
d.next = e;
System.out.println("Nodes before swapping : ");
display(a);
System.out.println("Nodes after swapping : ");
swapPairs(a);
display(a);
}
}
